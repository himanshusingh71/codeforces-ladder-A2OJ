A. Stones on the Table

import java.util.*;


 public class c{
public static void main(String[] args)
{
	Scanner sc = new Scanner(System.in);

   String s;

   int n;

   n = sc.nextInt();

   int count = 0;

   s = sc.next();

    for(int i=0;i<n-1;i++)
    {
    	if(s.charAt(i) == s.charAt(i+1))
    		count++;
    }

    System.out.println(count);

}

}
