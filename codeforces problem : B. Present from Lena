            System.out.print("  ");
        }
         
          for(int j=0;j<move/2;j++)
     {
        System.out.print(j + " ");
     }

     for(int j=move/2;j>=0;j--)
     {
        if(j!=0)
         System.out.print(j + " ");
     else 
        System.out.println(j);
     }
      

     move+=2;
     rowise--;
        
       

     }

      move-=4;
     rowise+=2;  
for(int i=0;i<n;i++)
     {
